---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"       : "{{ post.title | escape }}",
      "category"    : "{{ post.category | escape}}",
      "tags"        : "{{ post.tags | escape | join: ', ' }}",
      "keywords"    : "{{ post.keywords | escape | join: ', ' }}",
      "url"         : "{{ site.baseurl }}{{ post.url }}",
      "date"        : "{{ post.date }}",
      "edit"        : "{{ post.edit }}",
      "description" : "{{ post.description | strip_html | strip_newlines | escape | jsonify}}"
      "content"     : {{ post.content | strip_html | strip_newlines | escape | jsonify }}
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]